script/source = "extends Node

export var ATP = 4
export var time_life = 0
export var quantity_cells = 1

var produced_atp = 2

func set_labels():
	$UI/labels/ATPLabel.text = \"ATP: \" + str(ATP)
	$UI/labels/CellsLabel.text = \"Tempo de Vida: \" + str(time_life)
	$UI/labels/TimeLabel.text = \"Celulas: \" + str(quantity_cells) 




func _on_TextureButton_pressed():
	ATP += quantity_cells * produced_atp
	set_labels()
	
	

func stop_mitose():
	$UI/Image/celula.hide()	
	$UI/Image/celula.stop()
	$UI/Image/celula.frame = 0
	$UI/Image/TextureButton.visible = true
	$UI/Image/TextureButton.disabled = false
	

func meiose():
	quantity_cells = quantity_cells * 2
	set_labels()

func start_mitose():
	$UI/Image/TextureButton.hide()
	$UI/Image/TextureButton.disabled = true
	$UI/Image/celula.visible = true
	$UI/Image/celula.play()
	


func _on_MitoseButton_pressed():
	start_mitose()
		


func _on_celula_animation_finished():
	meiose()
	stop_mitose()



func _ready():
	stop_mitose()
	set_labels()


"

